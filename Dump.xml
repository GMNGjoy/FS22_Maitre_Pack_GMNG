<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="trailer" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://validation.gdn.giants-software.com/xml/fs22/vehicle.xsd">
    <annotation>Copyright (C) GIANTS Software GmbH, All Rights Reserved.</annotation>

    <parentFile xmlFilename="../FS22_Maitre_Pack/Dump/Dump.xml">
        <attributes>
            <!-- re-set paths since we're extending it -->
            <set path="vehicle.storeData.name" value="Dump Black Edition"/>
            <set path="vehicle.storeData.image" value="icons/store_dump.dds"/>
            <set path="vehicle.base.filename" value="../FS22_Maitre_Pack/Dump/Dump.i3d"/>

            <!-- Black Capacity Fill Unit -->
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2)#name" value="$l10n_configuration_blackCapacity"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2)#price" value="15000"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).fillUnits.fillUnit(0)#shopDisplayUnit" value="CUBICMETER"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).fillUnits.fillUnit(0)#fillTypeCategories" value="BULK"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).fillUnits.fillUnit(0)#capacity" value="38280"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).fillUnits.fillUnit(0)#allowAILoading" value="true"/>
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).fillUnits.fillUnit(0).exactFillRootNode#node" value="exactFillRootNode" />
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).fillUnits.fillUnit(0).autoAimTargetNode#node" value="fillAutoAimTargetNode" />
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).fillUnits.fillUnit(0).autoAimTargetNode#startZ" value="6.7" />
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).fillUnits.fillUnit(0).autoAimTargetNode#endZ" value="0" />
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).fillUnits.fillUnit(0).autoAimTargetNode#invert" value="false" />
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).fillUnits.fillUnit(0).autoAimTargetNode#startPercentage" value="25" />
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).objectChange(0)#node" value="GrainExtension" />
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).objectChange(0)#visibilityActive" value="true" />
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).objectChange(1)#node" value="backDoorGrainExtension" />
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).objectChange(1)#visibilityActive" value="true" />
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).objectChange(2)#node" value="Decals18" />
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).objectChange(2)#visibilityActive" value="false" />
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).objectChange(3)#node" value="Decals21" />
            <set path="vehicle.fillUnit.fillUnitConfigurations.fillUnitConfiguration(2).objectChange(3)#visibilityActive" value="true" />

            <!-- Black Capacity Configuration -->
            <set path="vehicle.configurationSets.configurationSet(2)#name" value="$l10n_configuration_blackCapacity" />
            <set path="vehicle.configurationSets.configurationSet(2).configuration(0)#name" value="fillUnit" />
            <set path="vehicle.configurationSets.configurationSet(2).configuration(0)#index" value="3" />
            <set path="vehicle.configurationSets.configurationSet(2).configuration(1)#name" value="fillVolume" />
            <set path="vehicle.configurationSets.configurationSet(2).configuration(1)#index" value="2" />
            <set path="vehicle.configurationSets.configurationSet(2).configuration(2)#name" value="trailer" />
            <set path="vehicle.configurationSets.configurationSet(2).configuration(2)#index" value="1" />

            <!-- base color -->
            <set path="vehicle.baseMaterial.material(0).shaderParameter(0)#value" value="SHARED_BLACK1"/>
            <set path="vehicle.baseMaterial.material(0).shaderParameter(0)#name" value="colorMat0"/>

            <!-- primary color -->
            <set path="vehicle.baseMaterialConfigurations#useDefaultColors" value="true"/>
            <set path="vehicle.baseMaterialConfigurations#defaultColorIndex" value="8"/>  

            <!-- secondary color -->
            <set path="vehicle.designMaterialConfigurations#useDefaultColors" value="true"/>
            <set path="vehicle.designMaterialConfigurations#defaultColorIndex" value="6"/>
            <set path="vehicle.designMaterialConfigurations.material(0)#name" value="Dump_Mat"/>
            <set path="vehicle.designMaterialConfigurations.material(0)#shaderParameter" value="colorMat1"/>  

             <!-- rim configurations -->
             <set path="vehicle.rimColorConfigurations#useDefaultColors" value="true"/>
             <set path="vehicle.rimColorConfigurations#defaultColorIndex" value="7"/>
             <set path="vehicle.rimColorConfigurations#price" value="0"/>
         </attributes>
    </parentFile>

    <!-- ONLY FOR ICON GENERATION -->
    <storeData>
        <name>Dump Black Edition</name>
        <image>icons/store_dump.dds</image>
        <brand>MAITRE</brand>
        <category>trailers</category>
    </storeData>
</vehicle>
